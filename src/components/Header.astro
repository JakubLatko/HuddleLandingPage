---
import { Image } from "astro:assets";
import logo from '../images/logo.svg'
---


<header>
    <nav>
        <a href="#">
            <Image src={logo} alt="Huddle logo"/>
        </a>
        <button>Try It Free</button>
    </nav>
</header>

<style lang="scss">
    @use '../scss/_variables.scss' as *;
    header{
        margin-inline: 5vw;
        padding-block: 1rem;
    }
    nav{
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        a{
            height: fit-content;
            max-width: 25vw;
            Image, img{
                object-fit: contain;
            }
        }
    }
    button{
        height: fit-content;
        padding: .5em 2em;
        border-radius: 100vw;
        box-shadow: 0px 0px 10px 0px var(--neutral-150);
        border:0;
        font-size: clamp(.5rem, 3vw, 1.5rem);
        background-color: transparent;
       
    }
</style>