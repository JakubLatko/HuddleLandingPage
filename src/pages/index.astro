---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Perk from "../components/Perk.astro";
import { Image } from "astro:assets";
import heroImage from "../images/illustration-mockups.svg";
import growImage from "../images/illustration-grow-together.svg";
import flowingImage from "../images/illustration-flowing-conversation.svg";
import usersImage from "../images/illustration-your-users.svg";
import json from "../perks.json";
//import heroImageDesktop from '../images/bg-hero-desktop.svg'
---

<Layout title="Huddle">
  <main>
    <section class="hero">
      <div class="hero__content">
        <h1>Build The Community Your Fans Will Love</h1>
        <p>
          Huddle re-imagines the way we build communities. You have a voice, but
          so does your audience. Create connections with your users as you
          engage in genuine discussion.
        </p>
        <button> Get Started For Free</button>
      </div>
      <div class="hero__image">
        <Image src={heroImage} alt="" />
      </div>
    </section>
    <section class="perks">
      <Perk title={json[0].title} text={json[0].text} inversed={false}>
        <Image src={growImage} alt="" />
      </Perk>
      <Perk title={json[1].title} text={json[1].text} inversed={true}>
        <Image src={flowingImage} alt="" />
      </Perk>
      <Perk title={json[2].title} text={json[2].text} inversed={false}>
        <Image src={usersImage} alt="" />
      </Perk>
    </section>
  </main>
</Layout>

<style lang="scss">
  @use "../scss/_variables.scss" as *;

  body {
    font-family: $ff-body;
    font-weight: 300;
    display: flex;
    flex-direction: column;
    background-color: var(--neutral-50);
  }

  main,
  footer {
    //padding-inline: 5vw;
  }

  .desktopOnly {
    display: none;
  }

  .mobileOnly {
    display: block;
  }

  .hero {
    padding-inline: 5vw;
    padding-top: 30vw;
    display: flex;
    background-color: var(--neutral-100);
    flex-direction: column;
    background-image: url(../images/bg-hero-mobile.svg);
    background-position: center center;
    background-size: contain;
    &__content {
      display: flex;
      flex-direction: column;
      gap: 2rem;
      text-align: center;
      justify-content: center;
      align-items: center;
      h1 {
        font-family: var(--ff-heading);
        font-weight: 700;
        font-size: clamp(1rem, 8vw, 3rem);
        color: var(--neutral-300);
      }
      p {
        max-width: 35ch;
        margin-inline: auto;
        font-size: clamp(0.75rem, 4vw, 3rem);
        color: var(--neutral-300);
      }
      button {
        width: fit-content;
        color: var(--neutral-100);
        background-color: var(--primary);
        border-radius: 100vw;
        border: 0;
        padding: 0.5em 2em;
        font-size: clamp(1rem, 4vw, 2rem);
      }
    }
    &__image {
      img {
        object-fit: contain;
        height: fit-content;
        width: fit-content;
        margin-block: 3rem;
      }
    }
  }

  .perks {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-inline: 5vw;
    margin-block: 3rem;
    img {
      width: 45%;
      object-fit: contain;
      height: fit-content;
      margin: auto;
    }
  }

  @media only screen and (min-width: 320px) and (max-width: 449px) {
    .perks {
      img {
        width: 90%;
      }
    }
  }
  @media only screen and (min-width: 450px) and (max-width: 549px) {
    .perks {
      margin-block: 3rem;
      img {
        width: 75%;
      }
    }
  }
  @media only screen and (min-width: 550px) and (max-width: 767px) {
    .hero {
      h1 {
        font-size: clamp(1rem, 8vw, 3rem);
      }
      p {
        font-size: clamp(1rem, 3.5vw, 1.5rem);
      }
      button {
        font-size: clamp(1rem, 4vw, 1.5rem);
      }
    }
    .perks {
      img {
        width: 30%;
      }
    }
  }

  @media only screen and (min-width: 768px) and (max-width: 1023px) {
    .hero {
      padding-top: 5vh;
      h1 {
        font-size: clamp(1rem, 8vw, 3rem);
      }
      p {
        font-size: clamp(1rem, 3vw, 1.5rem);
      }
      button {
        font-size: clamp(1rem, 4vw, 1.5rem);
      }
    }
    .perks {
      align-items: center;
      gap: 3rem;
      img {
        margin: 0;
        width: 100%;
      }
    }
  }

  @media only screen and (min-width: 1024px) and (max-width: 1439px) {
    .hero {
      padding-top: 5vh;
      h1 {
        font-size: clamp(1rem, 6vw, 3.5rem);
      }
      p {
        font-size: clamp(1rem, 2.5vw, 2rem);
      }
    }

    .perks {
      margin-block: 3rem;
      img {
        width: 40%;
      }
    }
  }

  @media only screen and (min-width: 1440px) {
    .desktopOnly {
      display: block;
    }
    .mobileOnly {
      display: none;
    }
    .perks {
      margin-block: 5rem;
      img {
        width: 35%;
      }
    }
    .hero {
      display: flex;
      flex-direction: row;
      padding-block: 2rem 4rem;
      background-image: url(../images/bg-hero-desktop.svg);
      gap: 3rem;
      &__content {
        align-items: start;
        text-align: left;
        gap: 2rem;
        h1 {
          line-height: 130%;
        }
        p {
          margin: initial;
          font-size: clamp(1rem, 1.5vw, 2rem);
          max-width: 50ch;
        }
        button {
          font-size: clamp(1rem, 1.5vw, 2rem);
        }
      }
    }
  }
  @media only screen and (min-width: 1920px) {
    main {
      //padding-inline: 10vw;
    }
    .hero {
      padding-inline: 10vw;
      h1 {
        font-size: clamp(1rem, 2.5vw, 4rem);
      }
      p {
        font-size: clamp(1rem, 1.125vw, 2rem);
        max-width: 50ch;
      }
      button {
        font-size: clamp(1rem, 1.25vw, 2rem);
      }
    }
    .perks {
      margin-inline: 10vw;
      img {
        width: 40%;
      }
    }
  }
</style>
